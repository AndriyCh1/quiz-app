{
  "compilerOptions": {
    "paths": {
      "*": ["./src/*"]
    },
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./public",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
